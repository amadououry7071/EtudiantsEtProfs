@model List<string>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Choix des cours</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f5f7fa;
        }

        .form-container {
            max-width: 500px;
            margin: 60px auto;
            padding: 30px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

        h2 {
            color: #0d6efd;
            margin-bottom: 15px;
        }

        .form-check {
            margin-bottom: 8px;
        }

        button {
            width: 100%;
        }
    </style>
</head>

<body>

    <div class="form-container">
        <h1>Bienvenue , @ViewBag.leNom</h1>
        <form method="post">

            <!-- Cours -->
            <h2>Choisissez des cours</h2>
            <div class="mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="courPrefer" value="Csharp" id="csharp">
                    <label class="form-check-label" for="csharp">C#</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="courPrefer" value="Java" id="java">
                    <label class="form-check-label" for="java">Java</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="courPrefer" value="Python" id="python">
                    <label class="form-check-label" for="python">Python</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="courPrefer" value="React" id="react">
                    <label class="form-check-label" for="react">React</label>
                </div>
            </div>

            <!-- Niveau -->
            <h2>Votre niveau</h2>
            <div class="mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="niveauPrefer" value="Secondaire" id="sec">
                    <label class="form-check-label" for="sec">Secondaire</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="niveauPrefer" value="Cegep" id="cegep">
                    <label class="form-check-label" for="cegep">Cégep</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="niveauPrefer" value="Universite" id="uni">
                    <label class="form-check-label" for="uni">Université</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="niveauPrefer" value="Master" id="master">
                    <label class="form-check-label" for="master">Master</label>
                </div>
            </div>

            <!-- Prof -->
            <h2>Choisissez un prof</h2>
            <div class="mb-4">
                <select name="coursePrefer" class="form-select">
                    <option value="">-- Choisir un professeur --</option>
                    @foreach (string nom in Model)
                    {
                        <option value="@nom">@nom</option>
                    }
                </select>
            </div>

            <!-- Messages -->
            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.error
                </div>
            }

            @if (ViewBag.message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }

            <!-- Bouton -->
            <button type="submit" class="btn btn-primary btn-lg">
                Confirmer
            </button>

            @Html.ActionLink("Retour vers la connection","index","Connexion")

        </form>
    </div>

</body>
</html>
