@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Connexion</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: system-ui, -apple-system, sans-serif;
        }

        .login-container {
            background: #ffffff;
            padding: 35px;
            border-radius: 12px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }

        h3 {
            color: #1e293b;
            font-weight: 600;
            margin-bottom: 25px;
        }

        label {
            font-weight: 600;
            color: #334155;
            margin-bottom: 5px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #cbd5e1;
        }

            .form-control:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 0.15rem rgba(59, 130, 246, 0.25);
            }

        .btn-primary {
            background-color: #3b82f6;
            border: none;
            border-radius: 8px;
            padding: 10px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #2563eb;
            }

        .register-link a {
            color: #10b981;
            font-weight: 500;
            text-decoration: none;
        }

            .register-link a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>

    <div class="login-container">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["Success"]
            </div>
        }

        @if (TempData["ProfSuc"] != null)
        {
            <div class="alert alert-info text-center">
                @TempData["ProfSuc"]
            </div>
        }

        <h3 class="text-center">Connexion</h3>

        <form method="post">

            <div class="mb-3">
                <label for="Email">Adresse email</label>
                <input type="email" id="Email" name="Email" class="form-control"  />
            </div>

            <div class="mb-4">
                <label for="MotDePasse">Mot de passe</label>
                <input type="password" id="MotDePasse" name="MotDePasse" class="form-control" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    Se connecter
                </button>
            </div>
            <div style="color: mediumslateblue;margin-top:10px;text-align:center">
                @if (ViewBag.messageSucces != null)
                {
                    @ViewBag.messageSucces
                }
                @if (ViewBag.error != null)
                {
                    @ViewBag.error
                }



            </div>

            <div class="text-center mt-3 register-link">
                @Html.ActionLink("Retour vers l'inscription", "Index2", "Default")
            </div>

        </form>

    </div>

</body>
</html>
